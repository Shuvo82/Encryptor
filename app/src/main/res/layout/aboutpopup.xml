<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="360dp"
    android:layout_height="422dp"
    android:layout_alignParentLeft="false"
    android:layout_centerInParent="true"
    android:background="@color/popup"
    android:layout_centerVertical="true">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/appCompatImageView"

        android:layout_width="172dp"
        android:layout_height="177dp"

        android:clickable="false"
        android:fitsSystemWindows="true"
        android:src="@drawable/shuvo"
        app:layout_constraintHorizontal_bias="0.414"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">

    </androidx.appcompat.widget.AppCompatImageView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="330dp"
        android:layout_height="150dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="188dp"

        android:text="Developed by:-\n\nMd Sohorafuzzaman Shuvo\nUnited International University\nID :011 191 207"
        android:textColor="#C9FFDD"
        android:textSize="17dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


    </TextView>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="237dp"
        android:layout_height="63dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="340dp"
        android:text="App Version: 1.0\nBuild date: 7/7/2020\nThank you!"

        android:textColor="#C9FFDD"
        android:textSize="17dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


    </TextView>


</androidx.constraintlayout.widget.ConstraintLayout>